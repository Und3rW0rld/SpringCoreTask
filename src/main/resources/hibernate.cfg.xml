<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/gym_crm?useSSL=false</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"/>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hbm2ddl.auto">create-drop</property>
        <mapping class="com.uw.model.User"/>
        <mapping class="com.uw.model.Trainer"/>
        <mapping class="com.uw.model.Trainee" />
        <mapping class="com.uw.model.TrainingType" />
        <mapping class="com.uw.model.Training" />
    </session-factory>
</hibernate-configuration>
